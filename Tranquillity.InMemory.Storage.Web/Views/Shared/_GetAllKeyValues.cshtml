
<div class="panel panel-searchAll">
    <div class="panel-heading">Filter By NameSpace</div>
    <div class="panel-body">

        <span style="color:red">{{GetAllResponseMessage}}</span>
        <br />
        <span class="text-success">{{DeleteResponseMessage}}</span>
        <br />

        <input type="text" name="NameSpace" class="form-control"  maxlength="10" ng-model="nameSpace" placeholder="Enter Namespace" />

        <input type="button" value="Search" ng-click="getAllByNameSpace(nameSpace)" class="btn btn-primary" />

        <div class="container">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>NameSpace</th>
                        <th>Key</th>
                        <th>Product Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Unit</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr style="color:green" ng-repeat="keyValue in KeyValueStoreList">
                        <td>{{ keyValue.NameSpace  }}</td>
                        <td>{{ keyValue.Key  }}</td>
                        <td>{{ keyValue.Value.Name }}</td>
                        <td>{{ keyValue.Value.Description  }}</td>
                        <td>{{ keyValue.Value.Price  }}</td>
                        <td>{{ keyValue.Value.Unit  }}</td>
                        <td>
                            <a href="#" ng-click="onDeleteClick(keyValue.NameSpace, keyValue.Key)">Delete</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>